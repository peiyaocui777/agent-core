{
  "$schema": "https://raw.githubusercontent.com/nicovrc/tauri-apps/tauri-v2/tooling/cli/schema.json",
  "productName": "Jarvis AI",
  "version": "1.0.0",
  "identifier": "com.jarvis.agent",
  "build": {
    "devUrl": "http://localhost:3800",
    "frontendDist": "http://localhost:3800"
  },
  "app": {
    "windows": [
      {
        "title": "Jarvis AI",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Jarvis AI"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "global-shortcut": {
      "shortcuts": [
        "CmdOrCtrl+Shift+J"
      ]
    }
  }
}